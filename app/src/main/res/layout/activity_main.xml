<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bggreen">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape"
        android:elevation="50dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/logogreen"
            android:layout_centerHorizontal="true">
        </ImageView>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login to your account"
            android:textSize="25sp"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:textStyle="bold">
        </TextView>

        <EditText
            android:id="@+id/et1"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="Username"
            android:textSize="15sp"
            android:layout_below="@+id/tv_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape2"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp">
        </EditText>
        <EditText
            android:id="@+id/et2"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="Password"
            android:textSize="15sp"
            android:layout_below="@+id/et1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape2"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp">
        </EditText>

        <CheckBox
            android:id="@+id/cb"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@id/et2"
            android:layout_alignLeft="@id/et2"
            android:layout_marginTop="20dp">
        </CheckBox>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Password"
            android:layout_below="@id/et2"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@id/cb"
            android:layout_marginLeft="20dp"
            android:textSize="12dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:layout_alignRight="@id/et2"
            android:layout_below="@id/et2"
            android:layout_marginTop="20dp"
            android:textSize="12dp">
        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:background="@drawable/btshape"
            android:layout_below="@id/cb"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white">
        </androidx.appcompat.widget.AppCompatButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:layout_below="@id/btn"
            android:layout_alignLeft="@id/btn"
            android:layout_marginLeft="10dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up Here"
            android:layout_below="@id/btn"
            android:layout_alignRight="@id/btn"
            android:textStyle="bold"
            android:layout_marginRight="10dp">
        </TextView>




    </RelativeLayout>




</RelativeLayout>